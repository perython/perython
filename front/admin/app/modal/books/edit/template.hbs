<div class="modal-header">
  <button type="button" class="close" aria-hidden="true">&times;</button>
  <h4 class="modal-title">{{title}}</h4>
</div>

<div class="modal-body">
  <form encrtype="multipart/form-data">
    <input type="hidden" name="id">

    <div class="form-group">
      <label for="modal__title">Title</label>
      <input id="modal__title" class="form-control" type="text" name="title">
      {{#if errors.title}}
        <span class="label label-danger">{{errors.title}}</span>
      {{/if}}
    </div>

    <div class="form-group">
      <label for="modal__author">Author</label>
      <input id="modal__author" class="form-control" type="text" name="author">
      {{#if errors.author}}
        <span class="label label-danger">{{errors.author}}</span>
      {{/if}}
    </div>

    <div class="form-group">
      <label for="modal__categories_ids">Categories</label>
      <input id="modal__categories_ids" class="form-control" type="text" name="categories_ids">
      {{#if errors.categories_ids}}
        <span class="label label-danger">{{errors.categories_ids}}</span>
      {{/if}}
    </div>

    <div class="form-group">
      <label for="modal__status">Status</label>
      <select id="modal__status" class="form-control" name="status">
        <option value="">---</option>
        <option value="1">Planning</option>
        <option value="2">In progress</option>
        <option value="3">Finished</option>
      </select>
      {{#if errors.status}}
        <div class="label label-danger">{{errors.status}}</div>
      {{/if}}
    </div>

    <div class="form-group {{#if status}}{{#ifCond status '!=' '3'}}hide{{/ifCond}}{{/if}}">
      <label for="modal__finished_at">Finished at</label>
      <input id="modal__finished_at" class="form-control" type="date" name="finished_at">
      {{#if errors.finished_at}}
        <span class="label label-danger">{{errors.finished_at}}</span>
      {{/if}}
    </div>

    <div class="form-group">
      <label for="modal__cover_url">Cover</label>
      {{#if cover_url}}
        <img class="cover-img" src="/media/{{cover_url}}" alt="">
      {{/if}}
      <input id="modal__cover_url" class="form-control" type="file" name="cover_file">
      {{#if errors.cover_file}}
        <span class="label label-danger">{{errors.cover_file}}</span>
      {{/if}}
    </div>

    <div class="form-group">
      <label for="modal__notes">Notes</label>
      <textarea class="form-control" name="notes"></textarea>
      {{#if errors.notes}}
        <span class="label label-danger">{{errors.notes}}</span>
      {{/if}}
    </div>
  </form>
</div>

<div class="modal-footer">
  <button type="button" class="btn btn-default">Cancel</button>
  <button type="submit" class="btn btn-primary">Save</button>
</div>
